.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx; /* 整体高度，默认是100rpx，改高一点容纳大字 */
  background: #ffffff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 12rpx rgba(21, 54, 104, 0.05);
}

.tab-bar-border {
  background-color: rgba(168, 184, 205, 0.5);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 54rpx; /* 图标大小 */
  height: 54rpx;
  margin-bottom: calc(var(--space-s, 8rpx) * 0.75);
}

.tab-bar-item cover-view {
  /* === 这里调整字体大小 === */
  font-size: var(--fz-4, 24rpx); /* 原生大概是 20rpx 左右，这里改大到 24rpx */
  font-weight: 600;
}
