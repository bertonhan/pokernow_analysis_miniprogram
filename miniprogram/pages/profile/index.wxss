/* miniprogram/pages/profile/index.wxss */
page {
  background: linear-gradient(180deg, var(--bg-1) 0%, var(--bg-2) 34%, var(--bg-3) 100%);
  min-height: 100%;
}

.page-wrap {
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  padding: var(--space-m) var(--space-l) calc(var(--space-l) + var(--space-m));
  box-sizing: border-box;
  font-family: var(--font-body);
}

.card {
  width: 100%;
  border-radius: var(--radius-2);
  padding: calc(var(--space-l) + var(--space-m)) calc(var(--space-l) + var(--space-s));
  box-sizing: border-box;
  background: #ffffff;
  border: 0;
  box-shadow: var(--shadow-soft);
}

.card + .card {
  margin-top: var(--space-m);
}

.card-title {
  font-size: var(--fz-2);
  line-height: 1.3;
  color: var(--ink-strong);
  font-weight: 700;
  margin-bottom: calc(var(--space-s) * 1.75);
}

.card-desc {
  font-size: var(--fz-4);
  line-height: 1.7;
  color: var(--ink-base);
  margin-bottom: calc(var(--space-l) + var(--space-s));
}

.avatar-wrapper {
  width: 100%;
  background: none;
  padding: 0;
  margin-bottom: var(--space-l);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #eef1f5;
  border: 2rpx solid #e5e7eb;
}

.avatar-tip {
  margin-top: calc(var(--space-s) * 1.75);
  font-size: var(--fz-4);
  color: var(--ink-soft);
}

.form-group {
  width: 100%;
  border-radius: var(--radius-1);
  background: #f7faff;
  border: 0;
  padding: 0 var(--space-m);
  box-sizing: border-box;
  margin-bottom: var(--space-m);
  box-shadow: inset 0 0 0 1rpx rgba(220, 232, 248, 0.45);
}

.input-row {
  display: flex;
  align-items: center;
  min-height: 92rpx;
  border-bottom: 1rpx solid #e5edf8;
}

.input-row:last-child {
  border-bottom: none;
}

.label {
  width: 130rpx;
  font-size: var(--fz-3);
  color: #44546d;
}

.input {
  flex: 1;
  text-align: right;
  font-size: var(--fz-3);
  color: #111827;
}

.input::placeholder {
  color: #9ca3af;
}

.hint-text {
  font-size: var(--fz-4);
  line-height: 1.6;
  color: var(--ink-soft);
  margin-bottom: var(--space-m);
}

.btn-primary,
.btn-default,
.btn-danger {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: var(--radius-1);
  font-size: var(--fz-3);
  font-weight: 500;
  margin: 0 0 var(--space-m);
  padding: 0;
}

.btn-primary::after,
.btn-default::after,
.btn-danger::after {
  border: 0;
}

.btn-primary {
  background: linear-gradient(135deg, var(--brand-blue-1) 0%, var(--brand-blue-2) 100%);
  color: #ffffff;
  box-shadow: var(--shadow-button);
}

.btn-default {
  background: #ffffff;
  color: #1f2329;
  border: 1rpx solid #d0d7de;
}

.btn-danger {
  background: #fff5f5;
  color: #d92d20;
  border: 1rpx solid #ffd5d2;
  margin-bottom: 0;
}

.btn-primary:active {
  filter: brightness(0.95);
  transform: scale(0.98);
}

.btn-default:active {
  background: #f5f7fa;
}

.btn-danger:active {
  background: #ffeceb;
}

.profile-card {
  align-items: center;
  text-align: center;
}

.avatar-large {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  margin-bottom: var(--space-m);
  border: 2rpx solid #e5e7eb;
}

.user-name {
  font-size: var(--fz-1);
  color: var(--ink-strong);
  margin-bottom: calc(var(--space-s) * 1.5);
  font-weight: 700;
}

.user-id {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-s) var(--space-m);
  border-radius: var(--radius-3);
  background: #f3f6fb;
  color: var(--ink-base);
  font-size: var(--fz-4);
  margin-bottom: var(--space-l);
}

.notice-box {
  width: 100%;
  border-radius: var(--radius-1);
  padding: var(--space-m);
  margin-bottom: var(--space-l);
  box-sizing: border-box;
  background: #f7f9fc;
  border: 0;
  box-shadow: inset 0 0 0 1rpx rgba(226, 235, 248, 0.62);
  text-align: left;
}

.notice-title {
  font-size: var(--fz-4);
  color: #41516a;
  margin-bottom: calc(var(--space-s) * 0.75);
  font-weight: 600;
}

.notice-content {
  font-size: var(--fz-4);
  line-height: 1.6;
  color: var(--ink-base);
}

.action-area {
  width: 100%;
}
