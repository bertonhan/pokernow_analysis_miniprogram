/* miniprogram/pages/player/index.wxss */
page {
  background: #f6f6f6;
}
.container {
  min-height: 100vh;
}

/* === 未登录提示样式 (与对局页保持一致) === */
.empty-state {
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
  padding-top: 200rpx;
}
.empty-icon { 
  width: 120rpx; 
  height: 120rpx; 
  margin-bottom: 30rpx; 
}
.empty-text { 
  color: #999; 
  margin-bottom: 40rpx; 
  font-size: 32rpx; 
}
.login-jump-btn { 
  width: 240rpx !important; 
  border-radius: 50rpx; 
  background: #07c160; 
  color: white; 
}

/* === 开发中占位样式 === */
.working-state {
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
  padding-top: 200rpx;
}
.working-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}
.working-text {
  color: #666;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.working-sub-text {
  color: #999;
  font-size: 26rpx;
}