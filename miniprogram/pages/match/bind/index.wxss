/* miniprogram/pages/match/bind/index.wxss */

page {
  background-color: #f6f7f9;
  box-sizing: border-box;
  padding: 0;
}

view, text, image, scroll-view {
  box-sizing: border-box;
}

/* 容器去掉 padding，让 header 可以贴边 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  align-items: stretch;
}


/* === 顶部 Header (撑满屏幕) === */
.header-card {
  background: #fff;
  /* 增加内边距，让它看起来更厚实 */
  padding: 30rpx 40rpx 40rpx 40rpx; 
  /* 只有底部有圆角 */
  border-radius: 0 0 40rpx 40rpx; 
  box-shadow: 0 4rpx 30rpx rgba(0,0,0,0.03);
  z-index: 10;
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 6rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
}

/* === 状态提示条 (内嵌式) === */
.status-banner {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-banner.ongoing {
  background: #fffbe6; /* 很淡的黄色背景 */
  color: #fa8c16;
  border: 1rpx solid rgba(250, 140, 22, 0.1);
}

.status-banner.ended {
  background: #f5f5f5;
  color: #999;
  border: 1rpx solid #eee;
}

/* === 列表区域 === */
.list-area {
  flex: 1;
  /* 因为container去掉了padding，这里补上，防止卡片贴边 */
  padding: 0 24rpx; 
}

/* === 选手卡片 === */
.player-card {
  background: #fff;
  border-radius: 24rpx; /* 更大的圆角 */
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.01);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.player-card.is-mine {
  background: #f6ffed;
  border-color: #b7eb8f;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.1);
}

/* === 头像 === */
.avatar {
  width: 88rpx;
  height: 88rpx;
  background: #f0f5ff;
  color: #1890ff;
  border-radius: 50%;
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.avatar.avatar-mine {
  background: linear-gradient(135deg, #07c160, #389e0d);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.3);
}

/* === 中间信息 === */
.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-right: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 260rpx;
}

.name.masked {
  color: #ccc;
  font-style: italic;
  font-weight: normal;
}

.sub-name {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.tag-mine {
  font-size: 20rpx;
  background: #e6fffb;
  color: #07c160;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 600;
  border: 1rpx solid rgba(7, 193, 96, 0.2);
}

.id-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #bbb;
}

.id-val {
  font-family: "Courier New", monospace;
  margin-left: 8rpx;
  font-weight: 500;
}

/* === 按钮区域 === */
.action {
  margin-left: 20rpx;
  flex-shrink: 0;
}

.btn {
  padding: 14rpx 36rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
}
.btn-hover { opacity: 0.8; transform: scale(0.98); }

.bind {
  background: #07c160;
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.25);
}

.unbind {
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.locked-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.4;
}
.lock-icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 4rpx;
}
.locked-state text {
  font-size: 20rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  margin-top: 100rpx;
  color: #ccc;
  font-size: 28rpx;
}