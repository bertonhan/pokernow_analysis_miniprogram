page {
  --delete-reveal: 160rpx;
  --card-height: 320rpx;
  --c-blue-1: #1f96ff;
  --c-blue-2: #1f67ff;
  --c-cyan-1: #10a5b8;
  --c-cyan-2: #5bc8d8;
  --c-green-1: #19c46c;
  --c-green-2: #08b95c;
  --c-orange-1: #f0a23a;
  --c-orange-2: #ffd585;
  --c-red-1: #e26478;
  --c-red-2: #f6a4b4;
  --ink-strong: #15253e;
  --ink-normal: #5b6b84;
  --ink-soft: #8c98a8;
  background: linear-gradient(180deg, #edf4ff 0%, #f7faff 36%, #eef4ff 100%);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: var(--space-l) 0 0;
  box-sizing: border-box;
  font-family: var(--font-body);
  overflow: hidden;
}

.panel-create {
  position: relative;
  overflow: hidden;
  width: calc(100vw - 40rpx);
  margin: 0 auto var(--space-m);
  padding: var(--space-l);
  border-radius: var(--radius-3);
  border: 0;
  background: linear-gradient(145deg, #ffffff 0%, #eef6ff 58%, #e6f1ff 100%);
  box-shadow: 0 10rpx 24rpx rgba(34, 79, 139, 0.09);
  box-sizing: border-box;
}

.panel-deco {
  position: absolute;
  border-radius: var(--radius-pill);
  pointer-events: none;
}

.panel-deco-a {
  width: 260rpx;
  height: 260rpx;
  right: -95rpx;
  top: -110rpx;
  background: radial-gradient(circle, rgba(48, 147, 255, 0.3) 0%, rgba(48, 147, 255, 0) 72%);
}

.panel-deco-b {
  width: 200rpx;
  height: 200rpx;
  left: -75rpx;
  bottom: -88rpx;
  background: radial-gradient(circle, rgba(27, 188, 148, 0.2) 0%, rgba(27, 188, 148, 0) 72%);
}

.panel-main {
  position: relative;
  z-index: 1;
}

.panel-head {
  display: flex;
  flex-direction: column;
  gap: var(--space-s);
}

.panel-title {
  color: var(--ink-strong);
  font-size: var(--fz-1);
  font-weight: 800;
  line-height: 1.15;
}

.panel-subtitle {
  color: #5b6b84;
  font-size: var(--fz-4);
  line-height: 1.35;
}

.add-box {
  margin-top: var(--space-m);
  display: flex;
  align-items: center;
  gap: var(--space-s);
  padding: var(--space-s) var(--space-s) var(--space-s) var(--space-m);
  border-radius: var(--radius-1);
  border: 0;
  background: rgba(255, 255, 255, 0.9);
  box-sizing: border-box;
}

.link-input {
  flex: 1;
  height: 56rpx;
  font-size: var(--fz-4);
  color: #3f5674;
}

.add-btn {
  flex-shrink: 0;
  min-width: 100rpx;
  height: var(--btn-h);
  line-height: var(--btn-h);
  padding: 0 var(--btn-pad-x);
  text-align: center;
  border-radius: var(--btn-radius);
  background: linear-gradient(135deg, #1f96ff 0%, #1f67ff 100%);
  color: #ffffff;
  font-size: var(--btn-font-size);
  font-weight: 700;
  white-space: nowrap;
  box-shadow: 0 10rpx 22rpx rgba(31, 103, 255, 0.28);
}

.manual-entry-row {
  margin-top: var(--space-s);
  display: flex;
  align-items: center;
  gap: var(--space-s);
}

.manual-entry-btn {
  height: var(--btn-h);
  line-height: var(--btn-h);
  padding: 0 var(--btn-pad-x);
  border-radius: var(--btn-radius);
  background: linear-gradient(135deg, #10a5b8 0%, #1f67ff 100%);
  color: #ffffff;
  font-size: var(--btn-font-size);
  font-weight: 700;
  box-shadow: 0 10rpx 20rpx rgba(16, 110, 190, 0.24);
}

.manual-entry-tip {
  flex: 1;
  min-width: 0;
  font-size: var(--fz-5);
  color: var(--ink-soft);
}

.btn-hover {
  opacity: 0.86;
  transform: scale(0.97);
}

.logged-empty {
  width: calc(100vw - 40rpx);
  margin: 0 auto;
  padding: calc(var(--space-l) * 1.5) var(--space-l);
  border-radius: var(--radius-2);
  border: 0;
  background: linear-gradient(180deg, #ffffff 0%, #f9fbff 100%);
  box-shadow: 0 8rpx 18rpx rgba(15, 39, 80, 0.05);
  text-align: center;
  box-sizing: border-box;
}

.logged-empty-title {
  color: #2b3d58;
  font-size: var(--fz-3);
  font-weight: 700;
}

.logged-empty-sub {
  margin-top: var(--space-s);
  color: #8c98a8;
  font-size: var(--fz-4);
}

.list-area {
  flex: 1;
  min-height: 0;
}

.swipe-area {
  width: 100vw;
  height: var(--card-height);
  margin-bottom: var(--space-m);
  overflow: hidden;
}

.swipe-content {
  width: calc(100vw + var(--delete-reveal, 160rpx));
  height: 100%;
}

.swipe-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
}

.card-outer {
  width: 100vw;
  height: 100%;
  padding: 0 var(--space-l);
  box-sizing: border-box;
}

.card {
  position: relative;
  overflow: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: var(--space-l) var(--space-m);
  border-radius: var(--radius-3);
  border: 0;
  background: linear-gradient(160deg, #ffffff 0%, #f5f9ff 100%);
  box-shadow: none;
  box-sizing: border-box;
}

.card-running {
  background: linear-gradient(160deg, #ffffff 0%, #f1fbf6 100%);
  box-shadow: none;
}

.card-paused {
  background: linear-gradient(160deg, #ffffff 0%, #fffaf3 100%);
  box-shadow: none;
}

.card-ended {
  background: linear-gradient(160deg, #ffffff 0%, #f3f8ff 100%);
  box-shadow: none;
}

.card-glow {
  position: absolute;
  right: -44rpx;
  top: -44rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: var(--radius-pill);
  background: radial-gradient(circle, rgba(54, 149, 255, 0.18) 0%, rgba(54, 149, 255, 0) 72%);
  pointer-events: none;
}

.card-running .card-glow {
  background: radial-gradient(circle, rgba(24, 191, 105, 0.22) 0%, rgba(24, 191, 105, 0) 72%);
}

.card-paused .card-glow {
  background: radial-gradient(circle, rgba(255, 172, 79, 0.2) 0%, rgba(255, 172, 79, 0) 72%);
}

.card-ended .card-glow {
  background: radial-gradient(circle, rgba(108, 147, 206, 0.2) 0%, rgba(108, 147, 206, 0) 72%);
}

.card-header,
.card-meta,
.action-row {
  position: relative;
  z-index: 1;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: var(--space-s);
}

.title-group {
  min-width: 0;
  flex: 1;
}

.match-name {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #19283f;
  font-size: var(--fz-3);
  line-height: 1.2;
  font-weight: 800;
}

.match-id {
  display: block;
  margin-top: calc(var(--space-s) * 0.75);
  color: #7b8da6;
  font-size: var(--fz-5);
}

.status-tag {
  flex-shrink: 0;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 var(--space-m);
  border-radius: var(--radius-pill);
  font-size: var(--fz-5);
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: var(--space-s);
  box-sizing: border-box;
}

.status-tag.running {
  color: #148a41;
  background: #ecfdf3;
}

.status-tag.paused {
  color: #b4650c;
  background: #fff6e8;
}

.status-tag.ended {
  color: #5f6e84;
  background: #edf2fb;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: var(--radius-pill);
  background: #1cb96e;
  animation: breathe 2s infinite ease-in-out;
}

@keyframes breathe {
  0% { box-shadow: 0 0 0 0 rgba(28, 185, 110, 0.42); }
  70% { box-shadow: 0 0 0 10rpx rgba(28, 185, 110, 0); }
  100% { box-shadow: 0 0 0 0 rgba(28, 185, 110, 0); }
}

.card-meta {
  margin-top: var(--space-m);
  padding: var(--space-m) var(--space-m) var(--space-s);
  border-radius: var(--radius-1);
  background: #f3f7fd;
  box-sizing: border-box;
}

.card-running .card-meta {
  background: #eef8f3;
}

.card-paused .card-meta {
  background: #fff8ef;
}

.card-ended .card-meta {
  background: #f3f7fd;
}

.data-row {
  display: flex;
  align-items: center;
}

.data-row + .data-row {
  margin-top: var(--space-s);
}

.hand-row {
  padding-top: var(--space-s);
  border-top: 1rpx dashed #e0e7f2;
}

.icon-wrap {
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--space-s);
  flex-shrink: 0;
}

.data-icon {
  width: 22rpx;
  height: 22rpx;
  opacity: 0.35;
}

.data-text {
  min-width: 0;
  flex: 1;
  color: #5f6d83;
  font-size: var(--fz-4);
  line-height: 1.35;
}

.data-text.bold {
  color: #1e2d46;
  font-weight: 700;
}

.running-text {
  margin-left: var(--space-s);
  color: #08b95c;
  font-size: var(--fz-5);
  font-weight: 700;
}

.action-row {
  margin-top: var(--space-m);
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-s);
}

.action-left,
.action-right {
  display: flex;
  gap: var(--space-s);
}

.btn-capsule {
  min-width: 84rpx;
  height: var(--btn-h);
  line-height: var(--btn-h);
  padding: 0 var(--btn-pad-x);
  border-radius: var(--btn-radius);
  text-align: center;
  font-size: var(--btn-font-size);
  font-weight: 600;
  box-sizing: border-box;
}

.btn-capsule.blue {
  color: #1b5cbf;
  background: linear-gradient(135deg, #e8f1ff 0%, #deedff 100%);
}

.btn-capsule.cyan {
  color: #0f8ea0;
  background: #e8f8fb;
}

.btn-capsule.orange {
  color: #b4650c;
  background: #fff5e7;
}

.btn-capsule.green {
  color: #148a41;
  background: #e9fcf1;
}

.btn-capsule.red {
  color: #d1556b;
  background: #ffedf2;
}

.capsule-hover {
  filter: brightness(0.96);
  transform: scale(0.98);
}

.delete-btn {
  width: var(--delete-reveal, 160rpx);
  height: 100%;
  border-top-right-radius: var(--radius-2);
  border-bottom-right-radius: var(--radius-2);
  background: linear-gradient(180deg, #ffab6f 0%, #ff6d86 100%);
  color: #ffffff;
  font-size: var(--fz-3);
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
}

.list-footer {
  text-align: center;
  color: #7f8ea3;
  font-size: var(--fz-4);
  padding: var(--space-m) 0 calc(var(--space-l) + var(--space-s));
}

.list-bottom-space {
  height: var(--space-s);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: calc(var(--space-l) * 9);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: var(--space-l);
  opacity: 0.72;
}

.empty-text {
  color: #75859c;
  margin-bottom: calc(var(--space-l) + var(--space-s));
  font-size: var(--fz-3);
}

.login-jump-btn {
  width: 250rpx !important;
  height: var(--btn-h);
  line-height: var(--btn-h);
  border-radius: var(--btn-radius);
  background: linear-gradient(135deg, var(--brand-blue-1) 0%, var(--brand-blue-2) 100%);
  color: #ffffff;
  font-size: var(--btn-font-size);
  padding: 0 var(--btn-pad-x);
  box-shadow: var(--shadow-button);
}
