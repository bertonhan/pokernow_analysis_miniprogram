/* miniprogram/pages/match/list/index.wxss */

/* === 1. 全局设置 === */
page {
  --btn-width: 160rpx;
  --card-height: 340rpx; 
  background: #f6f7f9;   
  box-sizing: border-box;
}

/* 【修复】删除了报错的标签选择器，改为在具体类中控制 box-sizing */

.container { 
  padding: 24rpx 0; 
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box; /* 补上 */
}

/* === 2. 新建栏 === */
.add-box { 
  width: calc(100vw - 48rpx);
  margin: 0 auto 30rpx auto;
  
  display: flex; 
  align-items: center; 
  gap: 20rpx; 
  background: #fff; 
  padding: 12rpx 20rpx; 
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
  
  box-sizing: border-box; /* 补上 */
}

.link-input { 
  flex: 1; 
  font-size: 28rpx; 
  height: 60rpx; 
  color: #333;
  box-sizing: border-box; /* 补上 */
}

/* === 自定义新建按钮 === */
.add-btn {
  width: 110rpx !important;
  height: 60rpx;
  line-height: 60rpx;
  
  background: #07c160;
  color: #fff;
  border-radius: 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  
  flex-shrink: 0;
  margin: 0;
  padding: 0;
  transition: opacity 0.2s;
  box-sizing: border-box; /* 补上 */
}

.btn-hover { 
  opacity: 0.8; 
  transform: scale(0.96); 
}

/* === 3. 滑动区域 === */
.swipe-area { 
  width: 100vw; 
  height: var(--card-height); 
  margin-bottom: 24rpx; 
  overflow: hidden; 
  box-sizing: border-box; /* 补上 */
}
.swipe-content { width: calc(100vw + var(--btn-width)); height: 100%; box-sizing: border-box; }
.swipe-wrapper { display: flex; width: 100%; height: 100%; box-sizing: border-box; }

/* === 4. 卡片容器 === */
.card-outer { 
  width: 100vw; 
  height: 100%; 
  padding: 0 24rpx; 
  box-sizing: border-box; /* 补上 */
}

/* === 5. 卡片样式 === */
.card { 
  background: #fff; 
  padding: 30rpx; 
  border-radius: 20rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  justify-content: space-between; 
  position: relative;
  overflow: hidden;
  box-sizing: border-box; /* 补上 */
}

/* --- 头部 --- */
.card-header { 
  display: flex; 
  justify-content: space-between; 
  align-items: flex-start; 
  margin-bottom: 12rpx;
  box-sizing: border-box;
}
.match-name { 
  font-weight: 700; 
  font-size: 34rpx; 
  color: #222;
  line-height: 1.4;
  display: -webkit-box; 
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical; 
  overflow: hidden; 
  flex: 1; 
  margin-right: 20rpx;
  box-sizing: border-box;
}

/* --- 状态标签 --- */
.status-tag { 
  font-size: 22rpx; 
  padding: 6rpx 16rpx; 
  border-radius: 30rpx;
  flex-shrink: 0; 
  font-weight: 600;
  height: 44rpx; 
  line-height: 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-sizing: border-box; /* 补上 */
}
.status-tag.running { 
  color: #07c160; 
  background: rgba(7, 193, 96, 0.1); 
  border: 1rpx solid rgba(7, 193, 96, 0.2);
}
.status-tag.paused { 
  color: #fa8c16; 
  background: #fff7e6; 
  border: 1rpx solid #ffd591;
}
.status-tag.ended { 
  color: #8c8c8c; 
  background: #f5f5f5; 
  border: 1rpx solid #d9d9d9;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #07c160;
  animation: breathe 2s infinite ease-in-out;
}
@keyframes breathe {
  0% { box-shadow: 0 0 0 0 rgba(7, 193, 96, 0.4); }
  70% { box-shadow: 0 0 0 10rpx rgba(7, 193, 96, 0); }
  100% { box-shadow: 0 0 0 0 rgba(7, 193, 96, 0); }
}

/* --- 数据面板 --- */
.data-panel {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.data-row {
  display: flex;
  align-items: center; /* 现在没有多余的换行符了，垂直居中就是完美的 */
  margin-bottom: 12rpx;
}
.data-row:last-child { margin-bottom: 0; }

/* 【图标容器】 */
.icon-wrap {
  width: 30rpx;
  /* 删除固定高度，让它自适应 */
  display: flex;
  align-items: center;    
  justify-content: center;
  margin-right: 14rpx;
  flex-shrink: 0;
  
  /* 【删除】删除所有 margin-top hack，回归纯净 */
  margin-top: 0;       
}

/* 图标样式 */
.data-icon {
  width: 28rpx !important;
  height: 28rpx !important;
  /* 如果你的 wxml 还没改回黑色链接，这个 opacity 删掉能让灰色图标显眼点 */
  opacity: 0.4;
  display: block;
}

/* 文字样式 */
.data-text {
  flex: 1; 
  font-size: 26rpx;
  color: #666;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  
  /* 【修改】删除固定行高，或者设为与字号相近，让 flex 自动居中 */
  line-height: 1.4; 
}

.data-text.bold {
  color: #333;
  font-weight: 500;
}

.running-text {
  color: #07c160; 
  font-size: 22rpx;
  margin-left: 10rpx;
  font-weight: 600;
}

/* --- 按钮区 --- */
.action-row { 
  display: flex; 
  justify-content: space-between; 
  align-items: center;
  margin-top: 0; 
  box-sizing: border-box;
}

.action-left, .action-right {
  display: flex;
  gap: 16rpx; 
  box-sizing: border-box;
}

/* 胶囊按钮 */
.btn-capsule {
  padding: 0 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.2s;
  box-sizing: border-box; /* 补上 */
}

.btn-capsule.blue { background: #e6f7ff; color: #1890ff; }
.btn-capsule.purple { background: #f9f0ff; color: #722ed1; }
.btn-capsule.orange { background: #fff7e6; color: #fa8c16; }
.btn-capsule.green { background: #f6ffed; color: #52c41a; }
.btn-capsule.red { background: #fff1f0; color: #ff4d4f; }

.capsule-hover {
  filter: brightness(0.95);
  transform: scale(0.98);
}

/* === 6. 删除按钮 === */
.delete-btn {
  width: var(--btn-width); 
  height: 100%;
  background-color: #ff4d4f; 
  color: #fff;
  font-size: 30rpx; 
  font-weight: 600;
  border-top-right-radius: 20rpx; 
  border-bottom-right-radius: 20rpx;
  display: flex; 
  align-items: center; 
  justify-content: center;
  box-shadow: -4rpx 0 10rpx rgba(0,0,0,0.1);
  box-sizing: border-box; /* 补上 */
}

/* === 7. 空状态 === */
.empty-state {
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
  padding-top: 200rpx;
  box-sizing: border-box;
}
.empty-icon { width: 120rpx; height: 120rpx; margin-bottom: 30rpx; opacity: 0.3; }
.empty-text { color: #999; margin-bottom: 40rpx; font-size: 32rpx; }
.login-jump-btn { width: 240rpx !important; border-radius: 50rpx; background: #07c160; color: white; }