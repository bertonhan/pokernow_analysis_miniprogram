page {
  --bg-1: #eaf1ff;
  --bg-2: #f4f8ff;
  --bg-3: #eef3f8;
  --ink-strong: #19283f;
  --ink-base: #5f6f86;
  --ink-soft: #8b97a9;
  --brand-blue-1: #1f96ff;
  --brand-blue-2: #1f67ff;
  --brand-green: #07c160;
  --brand-red: #ef4444;
  --surface: #ffffff;
  --surface-soft: #f3f8ff;
  background: linear-gradient(180deg, var(--bg-1) 0%, var(--bg-2) 34%, var(--bg-3) 100%);
  width: 100%;
  overflow-x: hidden;
}

view,
text,
scroll-view,
image {
  box-sizing: border-box;
}

.container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header-section {
  width: 100%;
  background: linear-gradient(145deg, #ffffff 0%, #f5f9ff 58%, #edf5ff 100%);
  border-radius: 0 0 var(--radius-header-cut) var(--radius-header-cut);
  padding: calc(var(--space-l) + var(--space-s)) calc(var(--space-l) + var(--space-s)) var(--space-l);
  box-shadow: 0 10rpx 24rpx rgba(20, 52, 101, 0.08);
  margin-bottom: var(--space-m);
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-m);
  gap: calc(var(--space-s) * 1.5);
}

.title-wrap {
  min-width: 0;
  flex: 1;
  display: flex;
  align-items: center;
}

.match-name {
  min-width: 0;
  flex: 1;
  color: var(--ink-strong);
  font-size: var(--fz-1);
  line-height: 1.24;
  font-weight: 800;
}

.edit-btn {
  margin-left: calc(var(--space-s) * 1.25);
  width: var(--btn-icon-box);
  height: var(--btn-icon-box);
  border-radius: var(--radius-1);
  background: #edf3fb;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.edit-icon {
  width: var(--btn-icon-size);
  height: var(--btn-icon-size);
  opacity: 0.6;
}

.status-tag {
  flex-shrink: 0;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 var(--space-m);
  border-radius: var(--radius-pill);
  font-size: var(--fz-5);
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: var(--space-s);
  box-sizing: border-box;
}

.status-tag.running {
  color: #148a41;
  background: #ecfdf3;
}

.status-tag.paused {
  color: #b4650c;
  background: #fff6e8;
}

.status-tag.ended {
  color: #5f6e84;
  background: #edf2fb;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: var(--radius-pill);
  background: #1cb96e;
  animation: status-breathe 2s infinite ease-in-out;
}

@keyframes status-breathe {
  0% {
    box-shadow: 0 0 0 0 rgba(28, 185, 110, 0.42);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(28, 185, 110, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(28, 185, 110, 0);
  }
}

.info-block {
  min-width: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: calc(var(--space-s) * 1.25);
}

.info-action-row {
  display: flex;
  align-items: center;
  gap: var(--space-m);
}

.info-row {
  display: flex;
  align-items: baseline;
}

.label {
  width: 138rpx;
  flex-shrink: 0;
  color: var(--ink-soft);
  font-size: var(--fz-4);
}

.value {
  min-width: 0;
  flex: 1;
  color: var(--ink-base);
  font-size: var(--fz-4);
  font-weight: 600;
  line-height: 1.4;
  word-break: break-all;
}

.selectable-text {
  user-select: text;
}

.highlight {
  color: var(--brand-green);
  font-weight: 700;
}

.privacy-banner {
  margin-top: var(--space-m);
  border-radius: var(--radius-1);
  padding: var(--space-m);
  display: flex;
  align-items: center;
  gap: calc(var(--space-s) * 1.25);
  background: #e9f4ff;
  color: #2f6db6;
}

.privacy-banner text {
  font-size: var(--fz-5);
  font-weight: 500;
}

.header-ai-trigger {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-shrink: 0;
}

.header-ai-extension {
  margin-top: calc(var(--space-s) * 1.25);
  padding-top: var(--space-m);
  border-top: 1rpx solid #e2ebfa;
}

.stats-container {
  flex: 1;
  width: 100%;
  padding: 0 var(--space-l) calc(var(--space-l) + var(--space-m));
}

.section-header {
  margin-bottom: var(--space-m);
  padding: 0 calc(var(--space-s) * 0.75);
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title-actions {
  display: flex;
  align-items: center;
  gap: var(--space-s);
}

.section-title {
  color: var(--ink-strong);
  font-size: var(--fz-2);
  font-weight: 800;
}

.copy-btn {
  width: var(--btn-icon-box);
  height: var(--btn-icon-box);
  border-radius: var(--radius-1);
  background: #edf3fb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.copy-icon {
  width: var(--btn-icon-size);
  height: var(--btn-icon-size);
  opacity: 0.7;
}

.section-subtitle {
  margin-top: 0;
  color: var(--ink-soft);
  font-size: var(--fz-5);
  line-height: 1;
  white-space: nowrap;
}

.ai-test-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 54rpx;
  padding: 0 calc(var(--space-m) + 2rpx);
  border-radius: var(--radius-pill);
  background: linear-gradient(135deg, #1f96ff 0%, #1f67ff 100%);
  color: #ffffff;
  font-size: var(--fz-5);
  font-weight: 700;
  box-shadow: 0 10rpx 20rpx rgba(31, 103, 255, 0.2);
}

.ai-result-card {
  margin: var(--space-s) 0 var(--space-m);
  padding: var(--space-m);
  border-radius: var(--radius-2);
  background: #ffffff;
  box-shadow: 0 8rpx 18rpx rgba(15, 39, 80, 0.06);
}

.ai-result-title {
  color: var(--ink-strong);
  font-size: var(--fz-4);
  font-weight: 700;
}

.ai-result-error {
  margin-top: var(--space-s);
  color: var(--brand-red);
  font-size: var(--fz-5);
  line-height: 1.5;
}

.ai-result-text {
  margin-top: var(--space-s);
  color: var(--ink-base);
  font-size: var(--fz-5);
  line-height: 1.75;
  white-space: pre-wrap;
}

.ai-markdown-root {
  margin-top: var(--space-s);
  padding: var(--space-s) 0;
}

.md-block {
  margin-top: var(--space-s);
}

.md-block:first-child {
  margin-top: 0;
}

.md-line {
  color: #344863;
  font-size: var(--fz-5);
  line-height: 1.75;
  white-space: pre-wrap;
}

.md-heading {
  padding: 8rpx 14rpx 8rpx 18rpx;
  border-left: 6rpx solid #2f7cff;
  background: linear-gradient(90deg, rgba(47, 124, 255, 0.12) 0%, rgba(47, 124, 255, 0) 75%);
  border-radius: 10rpx;
}

.md-h1 .md-line {
  font-size: var(--fz-4);
  font-weight: 800;
  color: #1b2b44;
}

.md-h2 .md-line {
  font-size: var(--fz-4);
  font-weight: 760;
  color: #1e3150;
}

.md-h3 .md-line {
  font-size: var(--fz-4);
  font-weight: 730;
  color: #24385a;
}

.md-h4 .md-line,
.md-h5 .md-line,
.md-h6 .md-line {
  font-size: var(--fz-4);
  font-weight: 700;
  color: #294068;
}

.md-paragraph {
  padding: 2rpx 0;
}

.md-quote {
  padding: 16rpx 18rpx;
  border-left: 6rpx solid #80a9ff;
  background: linear-gradient(135deg, rgba(128, 169, 255, 0.14) 0%, rgba(128, 169, 255, 0.05) 100%);
  border-radius: 12rpx;
}

.md-list {
  padding: 4rpx 0;
}

.md-list-row {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  margin-top: 6rpx;
}

.md-list-row:first-child {
  margin-top: 0;
}

.md-list-marker {
  width: 42rpx;
  flex-shrink: 0;
  text-align: right;
  color: #2f6de0;
  font-size: var(--fz-5);
  font-weight: 700;
  line-height: 1.75;
}

.md-list-line {
  flex: 1;
}

.md-table-wrap {
  margin-top: var(--space-s);
}

.md-table-scroll {
  width: 100%;
}

.md-table {
  min-width: 100%;
  border: 1rpx solid rgba(34, 76, 144, 0.18);
  border-radius: 12rpx;
  overflow: hidden;
  background: #ffffff;
}

.md-table-row {
  display: flex;
  align-items: stretch;
}

.md-table-head {
  background: linear-gradient(180deg, #eef5ff 0%, #e8f1ff 100%);
}

.md-table-body-row:nth-child(odd) {
  background: #fbfdff;
}

.md-table-body-row:nth-child(even) {
  background: #f4f9ff;
}

.md-table-cell {
  min-width: 180rpx;
  flex: 1;
  padding: 12rpx 14rpx;
  border-right: 1rpx solid rgba(34, 76, 144, 0.14);
  border-bottom: 1rpx solid rgba(34, 76, 144, 0.1);
}

.md-table-row .md-table-cell:last-child {
  border-right: none;
}

.md-table-row:last-child .md-table-cell {
  border-bottom: none;
}

.md-table-head-cell {
  font-weight: 700;
}

.md-table-body-cell {
  font-weight: 500;
}

.md-table-line {
  font-size: var(--fz-5);
  line-height: 1.7;
}

.md-table-align-left {
  text-align: left;
}

.md-table-align-center {
  text-align: center;
}

.md-table-align-right {
  text-align: right;
}

.md-code-wrap {
  margin-top: var(--space-s);
  padding: 16rpx;
  border-radius: 14rpx;
  background: linear-gradient(165deg, #112244 0%, #192f58 100%);
  box-shadow: inset 0 1rpx 0 rgba(255, 255, 255, 0.08), 0 8rpx 16rpx rgba(17, 34, 68, 0.16);
}

.md-code-lang {
  display: inline-block;
  margin-bottom: 8rpx;
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.13);
  color: #c7d8ff;
  font-size: var(--fz-5);
  line-height: 1.4;
  letter-spacing: 0.6rpx;
}

.md-code-content {
  display: block;
  color: #e5edff;
  font-family: 'SFMono-Regular', 'Menlo', 'Monaco', 'Consolas', 'Courier New', monospace;
  font-size: var(--fz-5);
  line-height: 1.75;
  white-space: pre-wrap;
}

.md-hr {
  height: 2rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, rgba(47, 124, 255, 0) 0%, rgba(47, 124, 255, 0.65) 50%, rgba(47, 124, 255, 0) 100%);
  margin: 20rpx 0 12rpx;
}

.md-inline-strong {
  font-weight: 700;
  color: #1f3558;
}

.md-inline-em {
  font-style: italic;
  color: #355e93;
}

.md-inline-code {
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  background: #edf3ff;
  color: #0d4d9a;
  font-family: 'SFMono-Regular', 'Menlo', 'Monaco', 'Consolas', 'Courier New', monospace;
  font-size: var(--fz-5);
}

.md-inline-link {
  color: #145cc8;
  font-weight: 600;
  text-decoration: underline;
  text-decoration-style: dotted;
}

.header-loading-box {
  margin: 0;
}

.header-ai-result {
  margin: var(--space-m) 0 0;
  background: linear-gradient(160deg, #ffffff 0%, #f6faff 100%);
}

.loading-box {
  margin: var(--space-s) 0 var(--space-m);
  padding: calc(var(--space-l) + var(--space-s)) var(--space-l);
  border-radius: var(--radius-2);
  background: var(--surface);
  box-shadow: 0 8rpx 18rpx rgba(15, 39, 80, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: calc(var(--space-s) * 1.5);
  color: var(--ink-soft);
  font-size: var(--fz-4);
}

.loading-spinner {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #dce9fb;
  border-top-color: var(--brand-green);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.player-card {
  position: relative;
  overflow: hidden;
  margin-bottom: calc(var(--space-s) * 2.25);
  border-radius: var(--radius-3);
  padding: var(--space-m);
  background: linear-gradient(160deg, #ffffff 0%, #f7fbff 100%);
  box-shadow: 0 10rpx 24rpx rgba(15, 39, 80, 0.07);
}

.is-user-card {
  background: linear-gradient(160deg, #ffffff 0%, #f1f8ff 100%);
  box-shadow: 0 10rpx 24rpx rgba(31, 120, 255, 0.1);
}

.rank-edge,
.rank-sheen {
  pointer-events: none;
  z-index: 0;
}

.rank-edge {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  border-radius: var(--radius-3) 0 0 var(--radius-3);
}

.rank-sheen {
  position: absolute;
  left: -35%;
  top: -48rpx;
  width: 170%;
  height: 160rpx;
  transform: rotate(-9deg);
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.62) 46%,
    rgba(255, 255, 255, 0) 100%
  );
  opacity: 0.3;
}

.rank-card-1 {
  background: linear-gradient(145deg, #ffffff 0%, #fff6dd 46%, #ffe8b4 100%);
  box-shadow: 0 10rpx 24rpx rgba(247, 181, 54, 0.17);
}

.rank-card-1 .rank-edge {
  background: linear-gradient(180deg, #ffe8a3 0%, #f6c566 100%);
}

.rank-card-2 {
  background: linear-gradient(145deg, #ffffff 0%, #f4f8ff 50%, #e8f0ff 100%);
  box-shadow: 0 10rpx 24rpx rgba(40, 102, 198, 0.12);
}

.rank-card-2 .rank-edge {
  background: linear-gradient(180deg, #dce9fb 0%, #bcd0ee 100%);
}

.rank-card-3 {
  background: linear-gradient(145deg, #ffffff 0%, #fff3e8 46%, #ffdabc 100%);
  box-shadow: 0 10rpx 24rpx rgba(224, 132, 63, 0.14);
}

.rank-card-3 .rank-edge {
  background: linear-gradient(180deg, #ffd8bd 0%, #f4b486 100%);
}

.card-top,
.tags-row,
.stat-grid {
  position: relative;
  z-index: 1;
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: calc(var(--space-s) * 1.75);
  gap: calc(var(--space-s) * 1.25);
}

.player-info {
  min-width: 0;
  flex: 1;
  display: flex;
  align-items: center;
}

.rank-badge {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: calc(var(--space-s) * 1.75);
  border-radius: var(--radius-pill);
  text-align: center;
  font-size: var(--fz-5);
  font-weight: 800;
  color: #50627b;
  background: #edf2fb;
  flex-shrink: 0;
}

.rank-1 {
  color: #835300;
  background: linear-gradient(135deg, #fff0bc 0%, #ffd35e 100%);
}

.rank-2 {
  color: #4f6076;
  background: linear-gradient(135deg, #f0f4f9 0%, #d6e1ee 100%);
}

.rank-3 {
  color: #79421b;
  background: linear-gradient(135deg, #ffd7bd 0%, #f4b486 100%);
}

.avatar-container {
  width: 72rpx;
  height: 72rpx;
  margin-right: calc(var(--space-s) * 1.75);
  border-radius: 50%;
  overflow: hidden;
  background: linear-gradient(160deg, #f5f8fd 0%, #ecf3fe 100%);
  box-shadow: inset 0 0 0 2rpx rgba(219, 231, 247, 0.75);
  position: relative;
  flex-shrink: 0;
}

.user-avatar {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-avatar.default {
  z-index: 1;
}

.user-avatar.real {
  z-index: 2;
}

.player-name-box {
  min-width: 0;
  flex: 1;
}

.player-name {
  color: var(--ink-strong);
  font-size: var(--fz-3);
  line-height: 1.32;
  font-weight: 800;
  padding-top: calc(var(--space-s) * 0.25);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bound-tags-row {
  margin-top: calc(var(--space-s) * 0.75);
  min-height: 36rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.bound-tags-row::-webkit-scrollbar {
  display: none;
}

.bound-name-tag {
  display: inline-flex;
  align-items: center;
  height: 34rpx;
  line-height: 1;
  margin-right: var(--space-s);
  padding: 0 calc(var(--space-s) * 1.5);
  border-radius: var(--radius-pill);
  background: #edf3fb;
  color: #5e718c;
  font-size: var(--fz-5);
}

.top-right-info {
  margin-left: calc(var(--space-s) * 1.25);
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.hands-badge {
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 calc(var(--space-s) * 1.25);
  border-radius: var(--radius-pill);
  background: #edf3fb;
  color: #7f8fa5;
  font-size: var(--fz-5);
}

.player-net {
  margin-top: calc(var(--space-s) * 0.5);
  font-size: var(--fz-1);
  line-height: 1;
  font-weight: 800;
  font-family: var(--font-number);
}

.player-net.win {
  color: #04b65f;
}

.player-net.loss {
  color: var(--brand-red);
}

.tags-row {
  margin-bottom: var(--space-m);
  padding-left: calc(var(--space-l) * 2 + var(--space-s));
  display: flex;
  flex-wrap: wrap;
  gap: calc(var(--space-s) * 1.25);
}

.style-tag {
  height: 38rpx;
  line-height: 38rpx;
  padding: 0 calc(var(--space-s) * 1.5);
  border-radius: var(--radius-pill);
  font-size: var(--fz-5);
  font-weight: 600;
  color: #4f6079;
  background: #f0f5fc;
}

.style-tag.loose {
  color: #1f78ff;
  background: #e9f3ff;
}

.style-tag.tight {
  color: #bf7a15;
  background: #fff3df;
}

.style-tag.aggressive {
  color: #d1556b;
  background: #ffedf1;
}

.style-tag.passive {
  color: #148a41;
  background: #ecfdf3;
}

.style-tag.station {
  color: #0f8ea0;
  background: #e8f7fa;
}

.style-tag.balance {
  color: #3d62af;
  background: #edf2ff;
}

.style-tag.luck-god {
  color: #c58210;
  background: #fff3d2;
}

.style-tag.luck-king {
  color: #7a4bc6;
  background: #f2eaff;
}

.style-tag.luck-bad {
  color: #6a788f;
  background: #edf2fb;
}

.style-tag.luck-sad {
  color: #2e9b56;
  background: #e8f8ed;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: calc(var(--space-s) * 0.75);
  padding: var(--space-s);
  border-radius: var(--radius-1);
  background: #f2f6fb;
}

.stat-item {
  min-height: 80rpx;
  border-radius: var(--radius-1);
  background: linear-gradient(170deg, #fbfdff 0%, #f3f8ff 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: calc(var(--space-s) * 0.75) calc(var(--space-s) * 0.5);
}

.stat-label {
  color: #71829e;
  font-size: var(--fz-5);
}

.stat-val {
  margin-top: 0;
  color: #1e2d46;
  font-size: var(--fz-4);
  font-weight: 700;
}

.stat-val.high {
  color: #fa5151;
}

.stat-val.good {
  color: #ff9c6e;
}

.empty-stats {
  margin-top: calc(var(--space-s) * 1.5);
  padding: calc(var(--space-l) + var(--space-m) + var(--space-s)) var(--space-l);
  border-radius: var(--radius-2);
  background: #ffffff;
  color: #9aa6b8;
  font-size: var(--fz-4);
  text-align: center;
  box-shadow: 0 8rpx 18rpx rgba(15, 39, 80, 0.05);
}
